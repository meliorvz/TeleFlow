# Required: Telegram credentials (get from https://my.telegram.org)
TG_API_ID=123456
TG_API_HASH=your_api_hash_here

# Bulk send settings
BULK_SEND_DELAY_SECONDS=10
BULK_SEND_MAX_PER_JOB=200

# LLM settings (OpenRouter - OpenAI-compatible API)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=anthropic/claude-3.5-sonnet
# LLM_SYSTEM_PROMPT=  # Custom override (optional)

# Report schedule: manual | daily | weekly
REPORT_CADENCE=manual

# Max messages to cache per conversation (prevents issues with huge chats)
MESSAGE_CACHE_LIMIT=50

# Web UI settings
WEB_HOST=127.0.0.1
WEB_PORT=8080
